            android:label="PyO app">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GeneralInstructions"
            android:label="Instrucciones generales" />
        <activity
            android:name=".Instructions"
            android:label="..." />
        <activity
            android:name=".BossActivity"
            android:label="Selecciona tu jefe" />
        <activity
            android:name=".GoalActivity"
            android:label="Crea tus objetivos" />
        <activity
            android:name=".FormActivity"
            android:label="Objetivo">
        </activity>
        <activity
            android:name=".TracingActivity"
            android:label="Seguimiento de Objetivos">
